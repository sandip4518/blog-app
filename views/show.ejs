<article class="post-full animate-fade-in" style="max-width: 800px; margin: 0 auto; padding-bottom: 60px;">
  <header style="text-align: center; margin-bottom: 48px; padding-bottom: 32px; border-bottom: 1px solid var(--border);">
    <div style="margin-bottom: 16px;">
      <a href="/my-posts" class="btn btn-secondary" style="font-size: 0.85rem; padding: 6px 16px; border-radius: 99px;">â† Back to Dashboard</a>
    </div>
    <h1 style="font-size: 3.5rem; margin-bottom: 16px; line-height: 1.1;"><%= post.title %></h1>
    <div style="color: var(--text-muted); font-size: 1rem; display: flex; align-items: center; justify-content: center; gap: 12px;">
      <span>ğŸ“… <%= new Date(post.createdAt).toLocaleDateString(undefined, { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span>
      <span>â€¢</span>
      <span>ğŸ•’ <%= new Date(post.createdAt).toLocaleTimeString(undefined, { hour: '2-digit', minute: '2-digit' }) %></span>
    </div>
  </header>

  <div class="content glass-panel" style="padding: 48px; border-radius: var(--radius-lg); font-size: 1.15rem; line-height: 1.8; color: var(--text-main);">
    <%- sanitizeHtml(post.content) %>
  </div>

  <div class="actions" style="margin-top: 40px; display: flex; justify-content: space-between; align-items: center; padding-top: 24px; border-top: 1px solid var(--border);">
    <a href="/my-posts" class="btn btn-secondary">Back to Posts</a>
    <div style="display: flex; gap: 12px;">
      <a class="btn btn-primary" href="/posts/<%= post.id %>/edit">Edit Post</a>
      <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="margin: 0;">
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this post? This action cannot be undone.')">Delete Post</button>
      </form>
    </div>
  </div>
</article>
